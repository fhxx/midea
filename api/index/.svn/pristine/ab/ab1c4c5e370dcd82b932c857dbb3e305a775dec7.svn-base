class IndexController extends Controller {
    public function index($id=0){
        $com = $_POST["com"];
        $par = $_POST["par"];
        $arr = json_decode($par,true);
        $this ->Log($par);
        $str ="";
        switch ($com) {
          case 'login':
             $str = $this -> Login($arr);
          break;
          case 'Wx_Ty_Add':
             $str = $this -> Wx_Ty_Add($arr);
          break;
          case 'Wx_Read_Ty': //读取微信类型列表
             $str = $this -> Wx_Read_Ty();
            break;
          case 'MediaType':
             $str = $this -> MediaType();          
            break;
          case 'AddWx':
            $str = $this -> AddWx($arr);
            break;
          case 'Ordertake':
            $str = $this -> Ordertake();
            break;
          case 'Wx_Range_Add':
             $str = $this -> Wx_Range_Add($arr);
            break;
          case 'wxList':  //获取微信列表
            $str = $this -> wxList($arr);
            break;
          case 'delWxData': //删除数据
            $str = $this -> delWxData($arr);
            break;
          case 'UpdateFans':
             $str = $this -> UpdateFans($arr);
          case 'UpdateRead':
             $str = $this -> UpdateRead($arr);
            break;
          case 'PriceEdit':
             $str = $this -> PriceEdit($arr);
            # code...
            break;
          default:
            # code...
            break;
        }
        
        echo $str;

   }
   public function Login($par){
         
       $Model = M();
       $list = $Model
               ->query("select * from users where username='". $arr["username"]."' and password='".md5($arr['password'])."'");
      
       $str = "";
       if($list){
           $str = $this -> Json("200","登录成功","");
       }
       else  $str = $this -> Json("201","登录失败","");

       return $str;

   }
   public function Wx_Ty_Add($par){
       $wx = M("weixinType");
       $arr = array('name' => $par["name"] );
       $str = "";
       if($wx->add($arr)){
           $str = $this -> Json("200","类型添加成功","");
       }
       else $str = $this -> Json("201","类型添加失败","");
       return $str;
   }
