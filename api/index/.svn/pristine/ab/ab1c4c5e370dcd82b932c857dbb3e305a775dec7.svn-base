   public function Wx_Read_Ty(){
        $wx = M("weixinType");
        $res = $wx -> field("id,name") -> select();  
        $str = "";
        foreach ($res as $k => $v) {
           $str .="{\"id\":\"".$v["id"]."\",\"name\":\"".$v["name"]."\"},";
        }      
        if(strlen($str)>0) {
            return  $this -> Json("200","list",substr($str,0,-1));
        }
        else return $this->Json("201","error: list is empty","");
   }
